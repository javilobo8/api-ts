{
  "name": "api-ts",
  "version": "1.0.0",
  "description": "Typescript node web application boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/bin/www",
    "build": "tsc",
    "lint": "tslint src/**/*",
    "test": "jest && npm run lint"
  },
  "keywords": [
    "typescript",
    "node",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/javilobo8/api-ts.git"
  },
  "engines": {
    "node": ">=8"
  },
  "author": "javilobo8@github.com",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.3",
    "express": "^4.16.4",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/supertest": "^2.0.6",
    "jest": "^23.6.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts|js}",
      "!src/bin/*.{ts|js}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "preset": "ts-jest/presets/js-with-ts"
  }
}
